#!/usr/bin/env bash
# This script displays "Best School" 10 times, and on the 9th iteration, it says "Hi" on a new line

# Initialize a counter
counter=0

# Use a while loop to iterate while the counter is less than 10
while [ $counter -lt 10 ]; do
    # Check if it's the 9th iteration
    if [ $counter -eq 8 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi

    # Increment the counter
    ((counter++))
done
